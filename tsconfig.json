{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node", "mocha"],
    "lib": ["es2015", "dom", "ES2022.Object"],
  },
  "include": ["./lib/**/*.ts", "./lib/**/*.js", "./test/**/*.ts"],
  "exclude": ["./dist/**/*"]
}
